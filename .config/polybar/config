label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/music-player]
type = custom/script
exec = ${scripts.player-icons}
interval = 3
click-left = ${scripts.player-toggle}
click-right = ${scripts.player-toggle}
click-middle = ${scripts.player-toggle}

[module/updates-arch]
type = custom/script
exec = ${scripts.updates}
interval = 600
format-underline = #f50a4d

