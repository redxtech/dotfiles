foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[modules]
main-left = i3
main-center = music-player
main-right = pulseaudio updates-arch eth wlan date

secondary-left = ""
secondary-center = ""
secondary-right = ""

[scripts]
