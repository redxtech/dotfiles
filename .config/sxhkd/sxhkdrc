##########################
# wm independent hotkeys #
##########################

# terminal emulator
super + Return
	kitty

super + shift + Return
	xfce4-terminal

# run prompt, program launcher, open windows, & ssh sessions
super + {r,d,ctrl + d,shift + d,space}
	rofi -modi drun -show {run,drun,window,ssh,drun} -terminal kitty

# power-menu 
super + shift + e
     ~/.config/rofi/powermenu.sh

# make sxhkd reload its configuration files
super + Escape
	pkill -USR1 -x sxhkd

#################
# bspwm hotkeys #
#################

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close current window and kill all instances
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# switch windows
alt + Tab
	bspc node -f last

# focus the next/previous desktop in the current monitor
hyper + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# send to other monitor
super + o
	bspc node -m next

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# snap current window to an aspect ratio
hyper + r
	jgmenu --simple --at-pointer --csv-file=~/.config/bspwm/scripts/aspect-menu.csv

# toggle third monitor on and off
hyper + t
	~/.config/wm/scripts/toggle-third-display.sh

###################
# Multimedia Keys #
###################

# player specific
{_,shift,ctrl} + XF86Audio{Play,Next,Prev}
	playerctl --player={spotify,chromium,Plexamp} {play-pause,next,previous}

# general
alt + XF86Audio{Play,Next,Prev}
	playerctl {play-pause,next,previous}

# volume
XF86Audio{Raise,Lower}Volume
  pamixer --{in,de}crease 5

XF86AudioMute
  pamixer --toggle-mute

# copy current track information
hyper + XF86AudioPlay
	playerctl --player=spotify,chromium metadata --format "\{\{ artist \}\} - \{\{ title \}\}" | xclip -sel clip

#################
# Function Keys #
#################

# brightness
XF86MonBrightness{Up,Down}
  xbacklight -{inc,dec} 5

# screenshot
{_,shift,super} + Print
  flameshot {gui,screen -c,screen -p ~/Pictures/Screenshots}

#################
# Shortcut Keys #
#################

# browser
super + w 
  vivaldi-stable

# secondary apps
hyper + {d,s,a,f,p,v,y}
  {discord,spotify,authy,thunar,plex-desktop,pavucontrol,yuzu}

# focus apps
hyper + alt + {w,d,s,a,f,p,y}
  wmctrl -a {vivaldi,discord,spotify,authy,thunar,plex,yuzu}

# terminal apps
hyper + {m,r,n}
  kitty -e {btop,ranger,zsh -c "neofetch && exec zsh"}

######################
# Various Miscellany #
######################

# upgrade packages
hyper + u
	kitty -e zsh -c "pacaur -Syu && echo Done - Press enter to exit; read"

# toggle/choose audio output device
hyper + {_,shift} + o
	~/.local/bin/toggle-output {_,choose}

# toggle light with home assistant
hyper + {_, shift +} BackSpace
	~/.local/bin/homeassistant {light,desklights}

# next/previous wallpapers with variety
hyper + shift + bracket{left,right}
	variety --{previous,next}

# show keybinds
super + F1
  ~/.config/bspwm/scripts/keybindings_rofi.sh

