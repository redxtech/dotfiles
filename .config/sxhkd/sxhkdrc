#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

super + shift + Return
	xfce4-terminal

# run prompt
super + r
	rofi -modi drun -show run -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar -terminal kitty \
                -show-icons -drun-icon-theme "Arc-X-D" -font "Droid Sans Regular 10"

# program launcher
super + d
	rofi -modi drun -show drun -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar -terminal kitty \
                -show-icons -drun-icon-theme "Arc-X-D" -font "Droid Sans Regular 10"

# show open windows
super + ctrl + d
	rofi -modi drun -show window -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar -terminal kitty \
                -show-icons -drun-icon-theme "Arc-X-D" -font "Droid Sans Regular 10"

# show ssh sesssions
super + shift + d
	rofi -modi drun -show ssh -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar -terminal kitty \
                -show-icons -drun-icon-theme "Arc-X-D" -font "Droid Sans Regular 10"

# power-menu 
super + shift + e
     ~/.config/rofi/powermenu.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close current window and kill all instances
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# switch windows
alt + Tab
	bspc node -f last

# focus the next/previous desktop in the current monitor
hyper + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
#
# Special hotkeys
#

#################
# Multimedia keys
#################

XF86AudioPlay
	playerctl --player=spotify play-pause

XF86AudioNext
	playerctl --player=spotify next

XF86AudioPrev
	playerctl --player=spotify previous

shift + XF86AudioPlay
	playerctl --player=chromium play-pause

shift + XF86AudioNext
	playerctl --player=chromium next

shift + XF86AudioPrev
	playerctl --player=chromium previous

ctrl + XF86AudioPlay
	playerctl --player=Plexamp play-pause

ctrl + XF86AudioNext
	playerctl --player=Plexamp next

ctrl + XF86AudioPrev
	playerctl --player=Plexamp previous

XF86AudioRaiseVolume
  pamixer --increase 5

XF86AudioLowerVolume
  pamixer --decrease 5

XF86AudioMute
  pamixer --toggle-mute

# copy current track information
hyper + XF86AudioPlay
	playerctl --player=spotify,chromium metadata --format "\{\{ artist \}\} - \{\{ title \}\}" | xclip -sel clip

# Brightness up
XF86MonBrightnessUp
  xbacklight -inc 5

# And brightness down
XF86MonBrightnessDown
  xbacklight -dec 5

# Screenshot
Print
  flameshot gui -p ~/Pictures/Screenshots

super + Print
  flameshot screen -p ~/Pictures/Screenshots

# Shortcuts
super + w 
  vivaldi-stable

# Secondary Apps
hyper + {d,s,a,n,p,v}
  {discord,spotify,authy,thunar,plexmediaplayer,pavucontrol}

# focus secondary apps
hyper + alt + {w,d,s,p}
  wmctrl -a {vivaldi,discord,spotify,plex}

# open terminal apps
hyper + shift + {m,r,n}
  kitty -e {btop,ranger,zsh -c "neofetch && exec zsh"}

# upgrade packages
hyper + u
	kitty -e zsh -c "pacaur -Syu && echo Done - Press enter to exit; read"

# toggle audio output device
hyper + o
	~/.local/bin/toggle-output

# choose audio output device
hyper + shift + o
	~/.local/bin/toggle-output choose

# Show keybinds
super + F1
  ~/.config/bspwm/scripts/keybindings_rofi.sh

