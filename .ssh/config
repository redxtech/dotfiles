# default options (git, localhost excluded)
Host * !*git* !*localhost* !127.0.0.1
    IdentityFile ~/.ssh/id_rsa
    RemoteCommand zsh -l
    RequestTTY force

# default identity
Host *
    IdentityFile ~/.ssh/id_rsa
