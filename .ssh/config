# ssh config options

# include machine-specific hosts
Include hosts/config_local

Host vps
    HostName vps.gabedunn.dev
    User ubuntu

# Home & Canmore
Host home
    HostName gabe.is-a-linux-user.org

Host canmore
    HostName canmore.is-a-linux-user.org

Host home canmore
    User gabe

Host desktop
    User gabe
    HostName desktop.local

Host laptop
    User gabe
    HostName laptop.local

Host rpi
    User pi
    Hostname rpi.local

# default options (git, localhost excluded)
Host * !*git* !*localhost* !127.0.0.1
    IdentityFile ~/.ssh/id_rsa
    RequestTTY force

