# ssh config options

# defualt hosts for all computers

Host desktop
    HostName home.gabedunn.dev
    User gabe
    IdentityFile ~/.ssh/id_ed25519

Host laptop
    HostName home.gabedunn.dev
    User gabe
    IdentityFile ~/.ssh/id_ed25519
    Port 5022

# ovh vps
Host vps
    HostName vps.gabedunn.dev
    User ubuntu
    IdentityFile ~/.ssh/id_ed25519

# seedbox
Host sb
    HostName lw829.usbx.me
    User redxtech
    IdentityFile ~/.ssh/id_ed25519
    RequestTTY force
    RemoteCommand PATH="$PATH:$HOME/bin" zsh -l

