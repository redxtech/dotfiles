#!/usr/bin/env sh

# script to show the number of arch & AUR updates on the command line

main () {
    # check repo updates
    if ! updates_arch=$(checkupdates 2> /dev/null | wc -l ); then
        updates_arch=0
    fi

    # check AUR updates
    if ! updates_aur=$(pacaur -Qum 2> /dev/null | wc -l); then
        updates_aur=0
    fi

    # add repo & AUR updates
    updates=$((updates_arch + updates_aur))

    # if combined updates are more than 0, echo it
    if [ "$updates" -gt 0 ]; then
        echo "ï£“ $updates"
    else
        echo ""
    fi
}

main

