#!/usr/bin/env zsh

main () {
  local services=(
    plex
    rtorrent
    jackett
    sonarr
    radarr
  )

  for service in $services; do
    echo "Upgrading $service..."
    "/usr/bin/app-$service" upgrade
    echo "Restarting $service..."
    "/usr/bin/app-$service" restart
  done

  echo "Finished upgrades!"
}

main
