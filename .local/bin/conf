#!/usr/bin/env sh

# TODO: move to proper folder
# TODO: optimize commands

# script to handle configuration file opening
main () {
  # make sure $args exits and has exactly one element
  if test -z "$1"; then
    echo "error: specify a config"
    return 1
  fi

  # open the specified config file with $EDITOR
  case $1 in
    ###############
    # User Config #
    ###############
    btop) # monitor
      $EDITOR "$HOME/.config/btop/btop.conf"
      ;;
    ro|rofi) # launcher
      $EDITOR "$HOME/.config/rofi/config.rasi"
      ;;
    k|kitty|term) # kitty
      $EDITOR "$HOME/.config/kitty/kitty.conf"
      ;;
    kt|kittytheme) # kitty theme
      $EDITOR "$HOME/.config/kitty/theme.conf"
      ;;
    n|fetch|neofetch) # neofetch
      $EDITOR "$HOME/.config/neofetch/config.conf"
      ;;
    r|ranger) # ranger config
      $EDITOR "$HOME/.config/ranger/rc.conf"
      ;;
    rr|rifle) # ranger rifle config
      $EDITOR "$HOME/.config/ranger/rifle.conf"
      ;;
    rs|rscope) # ranger scope config
      $EDITOR "$HOME/.config/ranger/scope.sh"
      ;;
    ssh) # ssh
      $EDITOR "$HOME/.ssh/config"
      ;;
    tmux) # tmux
      $EDITOR "$HOME/.tmux.conf"
      ;;
    wal|pywal) # pywal
      $EDITOR "$HOME/.local/bin/pywal"
      ;;
    qmk|kb) # keyboard qmk
      $EDITOR "$HOME/Code/qmk_firmware/keyboards/gmmk/pro/ansi/keymaps/redxtech/keymap.c"
      ;;
    ##############
    # Vim Config #
    ##############
    v|vim|nvim) # vim
      $EDITOR "$HOME/.config/nvim//lua/init.lua"
      ;;
    va|vauto) # vim autocommands
      $EDITOR "$HOME/.config/nvim/lua/auto.lua"
      ;;
    vb|vbinds) # vim keybinds
      $EDITOR "$HOME/.config/nvim/lua/binds.lua"
      ;;
    vi|vinit) # vim init
      $EDITOR "$HOME/.config/nvim/init.vim"
      ;;
    vl|vlsp) # vim language server protocol
      $EDITOR "$HOME/.config/nvim/lua/lsp.lua"
      ;;
    vo|vopts) # vim options
      $EDITOR "$HOME/.config/nvim/lua/opts.lua"
      ;;
    vp|vplug|vplugins) # vim plugins
      $EDITOR "$HOME/.config/nvim/lua/plugins.lua"
      ;;
    ################
    # Shell Config #
    ################
    z|zsh) # zsh
      $EDITOR "$HOME/.zshrc"
      ;;
    za) # zsh aliases
      $EDITOR "$HOME/.config/zsh/aliases.zsh"
      ;;
    zi) # zsh (init)
      $EDITOR "$HOME/.config/zsh/init.zsh"
      ;;
    ze) # zsh env
      $EDITOR "$HOME/.config/zsh/env.zsh"
      ;;
    zp) # zsh path
      $EDITOR "$HOME/.config/zsh/path.zsh"
      ;;
    zinit) # zinit config
      $EDITOR "$HOME/.config/zsh/zinit.zsh"
      ;;
    p10k|prompt) # powerlevel10k config
      $EDITOR "$HOME/.config/zsh/p10k.zsh"
      ;;
    #########################
    # Window Manager Config #
    #########################
    b|bspwm|wm) # bspwm
      $EDITOR "$HOME/.config/bspwm/bspwmrc"
      ;;
    s|sxhkd) # sxhkd config
      $EDITOR "$HOME/.config/sxhkd/sxhkdrc"
      ;;
    ar|autorun) # autorun script
      $EDITOR "$HOME/.config/wm/scripts/autorun.sh"
      ;;
    pb|polybar|bar) # polybar config
      $EDITOR "$HOME/.config/polybar/config.ini"
      ;;
    pbl|barl|polybarlaunch) # polybar launch script
      $EDITOR "$HOME/.config/polybar/launch.sh"
      ;;
    p|picom|compositor) # compositor
      $EDITOR "$HOME/.config/picom/picom.conf"
      ;;
    ###############
    # Root Config #
    ###############
    ddclient|ddns) # dynamic dns - ddclient
      sudoedit /etc/ddclient/ddclient.conf
      ;;
    makepkg) # makepkg
      sudoedit /etc/makepkg.conf
      ;;
    pacman) # pacman
      sudoedit /etc/pacman.conf
      ;;
    sshd) # ssh daemon
      sudoedit /etc/ssh/sshd_config
      ;;
    sudo|sudoers|visudo) # sudoers
      sudo -E visudo
      ;;
    ###################
    # Script Specific #
    ###################
    c|conf) # this file
      $EDITOR "$0"
      ;;
    *) # config doesn't exist
      echo "error: that config doesn't exist"
      return 1
      ;;
  esac
}

main "$@"

