#!/usr/bin/env sh

main () {
    for SERVICE in airsonic jackett lidarr ombi plex radarr sonarr; do
        echo "Upgrading $SERVICE..."
        "/usr/bin/app-$SERVICE upgrade"
        echo "Restarting $SERVICE..."
        "/usr/bin/app-$SERVICE restart"
    done

    echo "Upgrades complete!"
}

     main
