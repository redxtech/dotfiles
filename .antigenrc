#!/usr/bin/env zsh

# load oh-my-zsh default modules
antigen use oh-my-zsh

# load all the plugins
antigen bundles <<EOBUNDLES
    # oh-my-zsh plugins
    bgnotify
    # cargo
    colored-man-pages
    command-not-found
    copybuffer
    docker
    docker-compose
    dotenv
    emoji
    encode64
    extract
    fd
    frontend-search
    fzf
    gitfast
    github
    gitignore
    gpg-agent
    httpie
    keychain
    man
    perms
    pip
    ripgrep
    # rust
    # rustup
    ssh-agent
    sublime
    systemd
    tmux
    transfer
    vscode
    wd
    yarn
    zsh_reload
    zsh-interactive-cd

    # plugins from git
    bigH/git-fuzzy --loc=bin
    djui/alias-tips
    hlissner/zsh-autopair
    laggardkernel/zsh-thefuck
    olets/zsh-abbr
    oz/safe-paste
    redxtech/zsh-aur-install
    redxtech/zsh-fzf-utils
    redxtech/zsh-not-vim
    redxtech/zsh-unix-simple
    Tarrasch/zsh-bd
    Tarrasch/zsh-colors
    unixorn/autoupdate-antigen.zshplugin
    zdharma/fast-syntax-highlighting
    zpm-zsh/clipboard
    zsh-users/zsh-autosuggestions
    zsh-users/zsh-completions
    zsh-users/zsh-history-substring-search
EOBUNDLES

# load platform specific plugins
_CURR_DISTRO="$(lsb_release -is)"
if test "$_CURR_DISTRO" = "Arch" -o "$_CURR_DISTRO" = "Garuda"; then
    antigen bundle archlinux
    VSCODE=code-insiders
elif test "$_CURR_DISTRO" = "openSUSE"; then
    antigen bundle suse
fi

# set theme to my custom theme
antigen theme redxtech/zshred zshred

# tell antigen to apply all the settings
antigen apply

